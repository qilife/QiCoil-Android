    <!--        android:text="1"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indent_16"
        android:ellipsize="end"
        android:gravity="left"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="Track Name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvDes"
        app:layout_constraintEnd_toStartOf="@+id/cbItem"
        app:layout_constraintStart_toEndOf="@id/cvLayout"
        app:layout_constraintTop_toTopOf="@id/cvLayout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indent_16"
        android:ellipsize="end"
        android:gravity="start"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/cvLayout"
        app:layout_constraintEnd_toStartOf="@+id/cbItem"
        app:layout_constraintStart_toEndOf="@id/cvLayout"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cbItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@drawable/bg_check_box_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cvLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>