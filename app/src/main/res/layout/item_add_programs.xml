<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/indent_16">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLayout"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardBackgroundColor="@color/color_gray"
        app:cardCornerRadius="@dimen/margin_item_5"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/imgViewAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_album_placeholder"
            app:siBorderColor="@color/transparent"
            app:siBorderWidth="0dp"
            app:siRadius="0dp"
            app:siSquare="true" />
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/imgLock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_album_lock_2"
            app:siBorderColor="@color/transparent"
            app:siBorderWidth="0dp"
            app:siRadius="@dimen/corner_radius_album"
            android:visibility="visible"
            app:siSquare="true" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/imgView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/frequency" />
    </androidx.cardview.widget.CardView>

    <!--    <androidx.appcompat.widget.AppCompatTextView-->
