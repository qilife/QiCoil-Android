<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/indent_8"
    android:paddingTop="@dimen/indent_8"
    android:paddingEnd="@dimen/indent_8"
    tools:background="@android:color/black">

    <ImageView
        android:id="@+id/item_track_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_album_default_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="@dimen/indent_8"
        android:paddingLeft="@dimen/indent_8"
        android:paddingEnd="@dimen/indent_8"
        android:paddingRight="@dimen/indent_8"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/item_track_image"
        app:layout_constraintRight_toLeftOf="@+id/item_track_options"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Track name" />

    <TextView
        android:id="@+id/item_album_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="@dimen/indent_8"
        android:paddingLeft="@dimen/indent_8"
        android:paddingEnd="@dimen/indent_8"
        android:paddingRight="@dimen/indent_8"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_small_10"
        app:layout_constraintLeft_toRightOf="@+id/item_track_image"
        app:layout_constraintRight_toLeftOf="@+id/item_track_options"
        app:layout_constraintTop_toBottomOf="@+id/item_track_name"
        tools:text="Album name" />

    <ImageView
        android:id="@+id/item_track_options"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingStart="@dimen/indent_16"
        android:paddingEnd="@dimen/indent_8"
        android:src="@drawable/ic_menu_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/indent_8"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/item_album_name" />
</androidx.constraintlayout.widget.ConstraintLayout>