<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_main_activity_background"
    tools:context=".lemeor.ui.purchase.FlashSaleActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/flash_sale_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_title_flash_sale"
        android:orientation="vertical">

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/margin_item_5"
            android:text="@string/tv_purchase_limit"
            android:textColor="#32CD32"
            android:textSize="@dimen/text_size_small_11"
            app:fontText="fonts/MyriadPro_Semibold.otf" />

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/tvFlashSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_buttons"
            android:text="@string/tv_flash_sale"
            android:textAllCaps="true"
            android:textColor="#F7D04F"
            android:textSize="@dimen/text_size_30"
            app:fontText="fonts/MyriadPro_Bold_Condensed_Italic.otf"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/tvOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_time_flash_sale"
            android:paddingLeft="@dimen/padding_left_right_item"
            android:paddingRight="@dimen/padding_left_right_item"
            android:text="@string/tv__50_off"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_23"
            app:fontText="fonts/MyriadPro_Bold_Condensed_Italic.otf"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlashSale" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/viewPrice"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="@dimen/margin_item_dialog_20"
                android:layout_height="@dimen/image_size_25"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_seekbar_2"
                android:layout_marginRight="@dimen/height_seekbar_2"
                android:background="@drawable/bg_timer"
                android:padding="@dimen/padding_top_item_title"
                android:src="@drawable/ic_timer" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/tvHours"
                android:layout_width="@dimen/margin_item_dialog_20"
                android:layout_height="@dimen/image_size_25"
                android:layout_marginLeft="@dimen/height_seekbar_2"
                android:layout_marginRight="@dimen/height_seekbar_2"
                android:background="@drawable/bg_timer"
                android:gravity="center"
                android:text="24"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_large_14"
                app:fontText="fonts/BebasNeue_Bold.otf" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/tvMinutes"
                android:layout_width="@dimen/margin_item_dialog_20"
                android:layout_height="@dimen/image_size_25"
                android:layout_marginLeft="@dimen/height_seekbar_2"
                android:layout_marginRight="@dimen/height_seekbar_2"
                android:background="@drawable/bg_timer"
                android:gravity="center"
                android:text="00"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_large_14"
                app:fontText="fonts/BebasNeue_Bold.otf" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/tvSeconds"
                android:layout_width="@dimen/margin_item_dialog_20"
                android:layout_height="@dimen/image_size_25"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_seekbar_2"
                android:layout_marginRight="@dimen/margin_item_5"
                android:background="@drawable/bg_timer"
                android:gravity="center"
                android:text="00"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_large_14"
                app:fontText="fonts/BebasNeue_Bold.otf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_left_right_item"
            android:background="#CC0000"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_left_right_item_title"
            android:paddingTop="@dimen/border_radius_album"
            android:paddingRight="@dimen/padding_left_right_item_title"
            android:paddingBottom="@dimen/border_radius_album"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOff">

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tv_purchase_limit"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_small_10"
                android:visibility="invisible"
                app:fontText="fonts/MyriadPro_Bold.otf" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/sh_price_left"
                android:orientation="horizontal">

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/tv_from"
                    android:textColor="#989898"
                    android:textSize="11sp"
                    app:fontText="fonts/BebasNeue_Bold.otf" />

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:id="@+id/mTvPriceFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_item_5"
                    android:layout_marginRight="@dimen/margin_item_5"
                    tools:text="$99.99"
                    android:textColor="#989898"
                    android:textSize="@dimen/text_size_large"
                    app:fontText="fonts/BebasNeue_Bold.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/sh_price_right"
                android:orientation="horizontal">

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/tv_now"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    app:fontText="fonts/BebasNeue_Bold.otf" />

                <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                    android:id="@+id/mTvPriceFS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_item_5"
                    android:layout_marginRight="@dimen/margin_item_5"
                    android:paddingBottom="2dp"
                    tools:text="$99.99"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_large_17"
                    app:fontText="fonts/BebasNeue_Bold.otf" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.Meditation.Sounds.frequencies.views.CustomFontTextView
                android:id="@+id/mTvPurchaseLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tv_purchase_limit"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_small_10"
                android:visibility="invisible"
                app:fontText="fonts/MyriadPro_Bold.otf" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/flash_sale_subs_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent_8"
        android:contentDescription="@null"
        android:padding="@dimen/item_offset"
        android:src="@drawable/ic_dismiss"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/flash_sale_subs_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/flash_sale_top_layout"
        app:layout_constraintBottom_toTopOf="@+id/flash_sale_subs_bottom_layout">
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/flash_sale_subs_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.Meditation.Sounds.frequencies.views.CustomFontTextView
            android:id="@+id/flash_sale_subs_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_buttons"
            android:layout_marginRight="@dimen/margin_buttons"
            android:layout_marginBottom="@dimen/indent_8"
            android:paddingTop="@dimen/indent_8"
            android:gravity="center"
            android:text="@string/tv_title_subscription_lifetime"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_small_6"
            app:fontText="fonts/MyriadPro_Regular.otf"
            app:layout_constraintBottom_toTopOf="@+id/flash_sale_subs_continue"/>

        <Button
            android:id="@+id/flash_sale_subs_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:minHeight="40dp"
            android:layout_marginBottom="@dimen/indent_16"
            android:background="@drawable/bg_continue_subscription"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue_background"
            android:textSize="@dimen/text_size_large_14"
            android:textStyle="bold"
            android:text="@string/tv_continue"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>